generator client {
	provider = "prisma-client-js"
}

datasource db {
	provider = "postgresql"
	url      = env("DATABASE_URL")
}

model Character {
	id String @id @default(uuid())
	name String?
	tag String
	prefix String?
	userId String
	avatarURL String?
	createdAt DateTime @default(now())

	messages Message[]
}

model Message {
	id String @id
	characterId String?
	content String
	repliedMessageId String?
	replyPreview String?

	character Character? @relation(fields: [characterId], references: [id], onDelete: SetNull)
}

model RbdUserCount {
	userId String @id
	count Int @default(1)
	lastUpdated DateTime @updatedAt
}
